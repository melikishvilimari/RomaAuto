@model IEnumerable<RomaAuto.Models.SalersPart>
@{
    ViewBag.Title = "_SalerPart";
}
@{
    string noInfo = "---------";
}
<table class="table">
    <tr>
        
        
        <th>
            მწარმოებელი
        </th>
        <th>
            მოდელი
        </th>
        <th>
            კატეგორია
        </th>
        <th>
            ტრანსმისია
        </th>
        <th>
            შენიშვნა
        </th>
        <th>
            დაგვეხმარა
        </th>
        <th>
            ვერ დაგვეხმარა
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{
                  string manufacturer = item.ManufacturerID == null ? noInfo : item.Manufacturer.Name;
                }
                @manufacturer

            </td>

            <td>
                @{
                     string carModel = item.CarModelsID == null ? noInfo : item.CarModel.Name;
                }
                @carModel
            </td>
            <td>
                @{
                    string carCategory = item.CarCategoryID == null ? noInfo : item.CarCategory.Name;
                }
                @carCategory
            </td>
            <td>
                @{
                    string transmision = item.CarTransmissionID == null ? noInfo : item.Transmision.Name;
                }
                @transmision
               
            </td>
            <td>
                @{
                    string carNote = item.Note == null ? noInfo : item.Note;
                }
                @carNote
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Helped)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DontHelped)
            </td>
            <td>
                @Html.ActionLink("რედაქტირება", "Edit", "SalersParts", new { id = item.SalersPartID, salerId = item.SalerID }, null) |
                @Html.ActionLink("წაშლა", "Delete", "SalersParts", new { id = item.SalersPartID, salerId = item.SalerID }, null)
            </td>
        </tr>
    }

</table>

