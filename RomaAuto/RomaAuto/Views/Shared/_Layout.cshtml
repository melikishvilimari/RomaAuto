<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RomaAuto", "create", "orders", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav menu">
                    <li>@Html.ActionLink("შეკვეთის მიღება", "create", "orders")</li>
                    <li>@Html.ActionLink("შეკვეთების სია", "index", "OrderList")</li>
                    
                    @if (RomaAuto.Helpers.LoginHelper.IsLoggedIn() && RomaAuto.Helpers.LoginHelper.CurrentUser().Category > 2)
                    {
                        <li>@Html.ActionLink("მომწოდებლების რეგისტრაცია", "index", "Admin")</li>
                        <li>
                            @Html.ActionLink("რეგისტრაცია", "RegisterOperator", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
                        </li>
                    }
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
